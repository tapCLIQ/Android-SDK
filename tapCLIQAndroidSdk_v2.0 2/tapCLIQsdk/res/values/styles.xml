<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="noAnimTheme" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tomatoRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_tomato</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:maxWidth">22dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
   
    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_star</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:maxWidth">22dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
</resources>